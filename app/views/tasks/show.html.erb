<div class="container mt-5 card">
  <div class="row">
    <h1><%= @task.title %></h1>
  </div>

  <div>
    <%= @task.details %>
  </div>

  <div>
    <%= @task.completed ? "[X] This task is completed" : "[ ] This task is not completed yet" %>
  </div>

  <div class="row border-top mt-5">
    <%= link_to "Back to list", tasks_path %>
  </div>
</div>
